{
  "name": "blake3",
  "version": "2.1.7",
  "description": "BLAKE3 hashing for JavaScript: native Node bindings (where available) and WebAssembly",
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "blake3",
    "node-addon",
    "hash",
    "webassembly",
    "wasm"
  ],
  "gypfile": true,
  "module": "./esm/index",
  "browser": "./esm/browser/index",
  "main": "./dist/index",
  "scripts": {
    "postinstall": "git submodule update --init --recursive && cd BLAKE3 && git reset --hard && git apply ../blake3.patch",
    "prepack": "make clean && make all && make test",
    "test": "make test",
    "fmt": "make fmt",
    "compile": "make all",
    "watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/connor4312/blake3.git"
  },
  "bugs": {
    "url": "https://github.com/connor4312/blake3/issues"
  },
  "homepage": "https://github.com/connor4312/blake3#readme",
  "author": "Connor Peet <connor@peet.io>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.20",
    "@types/node-fetch": "^2.6.2",
    "@types/serve-handler": "^6.1.1",
    "@types/stream-buffers": "^3.0.4",
    "@types/webpack": "^5.28.0",
    "benny": "^3.7.1",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "playwright": "^1.26.0",
    "prettier": "^2.7.1",
    "remark-cli": "^11.0.0",
    "remark-toc": "^8.0.1",
    "rimraf": "^3.0.2",
    "serve-handler": "^6.1.3",
    "source-map-support": "^0.5.21",
    "stream-buffers": "^3.0.2",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "node-addon-api": "^5.0.0"
  }
}
